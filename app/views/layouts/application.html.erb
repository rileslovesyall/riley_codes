<!DOCTYPE html>
<html>
<head>
  <title>Howdy, I'm Riley</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Special+Elite|Cutive+Mono' rel='stylesheet' type='text/css'>
  <%= render "google_analytics" %>
</head>
<body>

  <div class="container-fluid">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <div class="container-fluid">
    <%= render 'navbar' %>
    <%= render 'divider' %>
    <%= yield :top_content %> 
    <h1><%= yield :header %></h1>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>
<footer>
    <%= render 'footer' %>
</footer>
</html>
