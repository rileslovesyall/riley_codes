<body>

  <div class="container-fluid">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <div class="container-fluid">
    <%= render 'navbar' %>
    <%= yield :top_content %> 
    <h1><%= yield :header %></h1>
  </div>
  <div class="container">
