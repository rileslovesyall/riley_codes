.row
  .col-sm-12.col-md-12.col-lg-12
    %h3 Write a Post
    .form
      = form_for @post do |p|
        %p
          Title: 
          = p.text_field :title, class: 'blog-title-field'
        %p
          Body: 
          = p.text_area :body, class: 'blog-body-field'
        %p
          = submit_tag "Submit"
